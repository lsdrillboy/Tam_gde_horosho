  "common": {
    "fields": [
      {
        "id": "name",
        "label": "Контакт: Имя",
        "type": "text",
        "required": true
      },
      {
        "id": "phone",
        "label": "Контакт: Телефон",
        "type": "tel",
        "required": false
      },
      {
        "id": "telegram",
        "label": "Контакт: Telegram username",
        "type": "text",
        "required": false,
        "placeholder": "@username"
      },
      {
        "id": "comment",
        "label": "Комментарий",
        "type": "textarea",
        "required": false
      }
